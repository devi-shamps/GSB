{% extends 'base.html.twig' %}

{% block title %}Hello SaisirFicheFraisController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3>Renseigner ma fiche de frais du mois 12-2023</h3>
    {{ form_start(formFicheFraisForfait) }}
    {{ form_widget(formFicheFraisForfait) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(formFicheFraisForfait) }}

    <h3>Descriptif des éléments hors forfait</h3>
    {{ form_start(formFicheFraisHorsForfait) }}
    {{ form_widget(formFicheFraisHorsForfait) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(formFicheFraisHorsForfait) }}

</div>
{% endblock %}
